        <dependency>
            <groupId>com.apigee.infra.libraries</groupId>
            <artifactId>decisiontree</artifactId>
            <version>${platform.version}</version>
        </dependency>
        <dependency>
            <groupId>com.apigee.kernel</groupId>
            <artifactId>kernel-api</artifactId>
            <version>${platform.version}</version>
